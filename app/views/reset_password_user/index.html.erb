<div class="container">
  <h4 class="reset-title">Reset password</h4>
  <p class="help-text">Enter the e-mail associated with your account</p>
  <p class="help-text">and we'll send an e-mail with instructions to reset your password.</p>
  <%= form_with class: "form-registration", url: reset_password_user_path do |f| %>
    <div class="form-group">
      <%= f.label 'Email:', class: "labels" %>
      <%= f.text_field :email, class: "field form-control" %>
    </div>
    <%= f.submit 'SEND', class: "btn btn-sing-up marge-top" %>
  <% end %>
</div>