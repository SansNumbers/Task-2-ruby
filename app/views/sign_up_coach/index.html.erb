<div class="container">
<br><br><br>
<br><br>
  <h4 class="create">Create account</h4>
  <div class="sign_in">
    <div class="ask">Already have an account?</div>
    <div class="link"><%= link_to 'Sign in', sign_in_coach_path, class: "custom"%></div>
  </div>

  <%= form_with model: @coach, class: "form-registration", url: sign_up_coach_path do |f| %>

    <div class="sign_for marge-top">
      <div class="link_for active">COACH</div>
      <%= link_to 'USER', sign_up_user_path, class: 'link_for' %>
    </div>
  <br>

    <% invalid = @coach.errors.include?(:name) %>

    <% if alert %>
      <p class="alert"><%= alert%></p>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: "labels" %>
      <%= f.text_field :name, class: "field form-control #{'is-invalid' if invalid}"%>
      <% if invalid %>
        <div class="invalid-feedback d-block">
          <% @coach.errors.full_messages_for(:name).each do |error_message| %>
            <%= error_message %>.
          <% end %>
        </div>
      <% end %>
    </div>
    <br>
    <% invalid = @coach.errors.include?(:email) %>

    <div class="form-group">
      <%= f.label :email, class: "labels" %>
      <%= f.text_field :email, class: "field form-control #{'is-invalid' if invalid}" %>
      <% if invalid %>
        <div class="invalid-feedback d-block">
          <% @coach.errors.full_messages_for(:email).each do |error_message| %>
            <%= error_message %>.
          <% end %>
        </div>
      <% end %>
    </div>
    <br>

    <% invalid = @coach.errors.include?(:password) %>

    <div class="form-group" data-controller="password-toggle">
      <%= f.label :password, class: "labels" %>
      <%= f.password_field :password, class: "field #{'is-invalid' if invalid} unhide", autocomplete: "current-password", "data-target": "password-toggle.unhide" %>
      <span data-action="click->password-toggle#password" class="password-field-icon-1 position far bi bi-eye-slash"></span>
      <% if invalid %>
        <div class="invalid-feedback d-block">
          <% @coach.errors.full_messages_for(:password).each do |error_message| %>
            <%= error_message %>.
          <% end %>
        </div>
      <% end %>
    </div>
    <br>

    <% invalid = @coach.errors.include?(:password_confirmation) %>

    <div class="form-group" data-controller="password-toggle">
      <%= f.label :password_confirmation, class: "labels" %>
        <%= f.password_field :password_confirmation, class: "field #{'is-invalid' if invalid} unhide", autocomplete: "current-password", "data-target": "password-toggle.unhide" %>
        <span data-action="click->password-toggle#password" class="password-field-icon-1 position far bi bi-eye-slash"></span>
      <% if invalid %>
        <div class="invalid-feedback d-block">
          <% @coach.errors.full_messages_for(:password_confirmation).each do |error_message| %>
            <%= error_message %>.
          <% end %>
        </div>
      <% end %>
    </div>
    <br>

    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
      <label class="form-check-label font" for="flexCheckDefault">
        I've read and agree with <strong>Terms of Services</strong> and our <strong>Privacy Policy</strong>
      </label>
    </div>

    <!-- <p class="marge-top">I've read and agree with Terms of Services and our Privacy Policy</p> -->
    <%= f.submit 'SIGN UP', class: "btn btn-sing-up marge-top"%>
    <div class="sign-with">
      <div class="with">
        or Sign in with
      </div>
      <div class="badge-with">
        <i class="bi bi-facebook"></i>
        <i class="bi bi-google"></i>
      </div>
    </div>
  <% end %>
</div>
<br><br>